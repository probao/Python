        plt.plot(x, y)
        plt.show( )

if __name__ == '__main__':
        x_values = range( -100, 100, 10)
        y_values = []
        for x in x_values:
                y_values.append(x**2 + 2*x + 1)

        fig_quad(x_values, y_values)


